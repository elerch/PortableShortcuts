    <!-- Directory Content Template -->
    <HierarchicalDataTemplate x:Key="DirectoryTemplate"
    ItemsSource="{Binding Directory}"
    ItemTemplate="{StaticResource EntryTemplate}">
        <Border x:Name="DoctorTemplateBorder" BorderBrush="AliceBlue" 
            BorderThickness="1" CornerRadius="10" >
            <Expander x:Name="DirectoryTemplateExpander" 
                  HeaderTemplate="{DynamicResource DoctorHeaderTemplate}" 
                  Header="{Binding}" IsTabStop="False"  
                  HorizontalAlignment="Left" IsEnabled="True" 
                  ExpandDirection="Down">
                <Grid Margin="5,5,5,5">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="{Binding Path=Name}" />
                    <TextBlock Grid.Row="1" Text="Directory" />
                </Grid>
            </Expander>
        </Border>
    </HierarchicalDataTemplate>


